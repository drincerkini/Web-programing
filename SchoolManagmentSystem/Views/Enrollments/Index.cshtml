@model IEnumerable<SchoolManagmentSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-light table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>           
             <td>
                @Html.DisplayFor(modelItem => item.Student.FullName)
            </td>
            <td>
                <a class="btn btn-ligt text-secondary" asp-action="Edit" asp-route-id="@item.EnrollmentID">Edit</a> |
                <a class="btn btn-ligt text-secondary" asp-action="Details" asp-route-id="@item.EnrollmentID">Details</a> |
                <a class="btn btn-ligt text-danger" asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
