@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Role";
}

<a asp-action="Index">Index</a>

<div class="text-center">
    <form style="display:flex; flex-direction:column;  align-items:center" asp-action="CreateRole" method="post">
        <div class="form-group">
            <label style="font-size:20px" for="formGroupExampleInput">Create new role</label>
            <input class="form-control" style="width:400px; height:50px; border: 1px solid #202528" type="text" name="roleName" />
        </div>
        <div class="form-group">
            <input class="btn btn-secondary" type="submit" name="submit" value="Add" />
        </div>
    </form>
</div>
